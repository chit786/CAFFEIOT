{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "typings/global",
        "typings/global.d.ts"
    ],
    "types": [
        "firebase"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}